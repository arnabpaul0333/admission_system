<% provide(:title, 'Basic Details') %>
<h1>REGISTRATION FORM</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@student) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %><br>

      <%= f.label :Gender, class: "gender" %>
      <%= f.label :Gender, "Female",class: "gender" %>
      <%= f.radio_button :gender,  "female" %>
      <%= f.label :Gender, "Male", class: "gender" %>
      <%= f.radio_button :gender, "male" %>
     
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date %>

      <%= f.label :father_name %>
      <%= f.text_field :father_name %>

      <%= f.label :mother_name %>
      <%= f.text_field :mother_name %>

      <%= f.label :Contact %>
      <%= f.text_field :contact %>

      <%= f.label :Address %>
      <%= f.text_field :address %>

      <%= f.label :City %>
      <%= f.text_field :city %>

      <%= f.label :State %>
      <%= f.text_field :state %>

      <%= f.label :Pincode %>
      <%= f.text_field :pincode %><br>

      <%= f.submit "Next Page", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
